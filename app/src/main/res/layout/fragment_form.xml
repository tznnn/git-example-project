<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FragmentForm">

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unit16dp"
            android:layout_marginTop="@dimen/unit16dp"
            android:layout_marginEnd="@dimen/unit16dp"
            android:hint="@string/ad"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unit16dp"
            android:layout_marginTop="@dimen/unit8dp"
            android:layout_marginEnd="@dimen/unit16dp"
            android:hint="@string/soyad"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextName" />

        <ImageView
            android:id="@+id/imageViewCalendar"
            android:layout_width="@dimen/unit32dp"
            android:layout_height="@dimen/unit32dp"
            android:layout_marginStart="@dimen/unit8dp"
            android:layout_marginTop="@dimen/unit8dp"
            android:layout_marginEnd="@dimen/unit32dp"
            android:src="@drawable/ic_calendar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/editTextDate"
            app:layout_constraintTop_toBottomOf="@+id/editTextSurname" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unit16dp"
            android:layout_marginTop="@dimen/unit8dp"
            android:layout_marginEnd="@dimen/unit64dp"
            android:hint="@string/dogum_tarihi"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextSurname" />

        <TextView
            android:id="@+id/textViewProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unit16dp"
            android:layout_marginTop="@dimen/unit16dp"
            android:text="@string/profil_fotografi"
            android:textColor="@color/black"
            android:textSize="@dimen/unit16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

        <ImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="@dimen/unit100dp"
            android:layout_height="@dimen/unit100dp"
            android:layout_marginStart="@dimen/unit16dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewProfile">

        </ImageView>

        <Button
            android:id="@+id/buttonProfilePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unit16dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="@dimen/unit100dp"
            android:text="@string/fotograf_sec"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewProfile"
            app:layout_constraintTop_toBottomOf="@+id/editTextDate">

        </Button>

        <TextView
            android:id="@+id/textViewGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/cinsiyet"
            android:textColor="@color/black"
            android:textSize="@dimen/unit16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewProfile" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unit16dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewGender">

            <RadioButton
                android:id="@+id/radioButtonFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kadın" />

            <RadioButton
                android:id="@+id/radioButtonMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Erkek" />

        </RadioGroup>

        <TextView
            android:id="@+id/textViewPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unit16dp"
            android:layout_marginTop="@dimen/unit16dp"
            android:text="@string/telefon_numarasi"
            android:textColor="@color/black"
            android:textSize="@dimen/unit16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

        <com.example.exampleproject.PhoneNumber
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unit16dp"
            android:layout_marginTop="@dimen/unit4dp"
            android:layout_marginEnd="@dimen/unit16dp"
            app:editTextHint="0 (xxx) xxx xx xx"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewPhoneNumber" />

        <TextView
            android:id="@+id/textViewAccountType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unit16dp"
            android:layout_marginTop="@dimen/unit16dp"
            android:text="@string/hesap_tipi"
            android:textColor="@color/black"
            android:textSize="@dimen/unit16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phoneNumber" />

        <CheckBox
            android:id="@+id/checkBoxVadeli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unit16dp"
            android:layout_marginTop="8dp"
            android:text="@string/vadeli_hesap"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewAccountType" />

        <CheckBox
            android:id="@+id/checkBoxVadesiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unit16dp"
            android:text="@string/vadesiz_hesap"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxVadeli" />

        <CheckBox
            android:id="@+id/checkBoxYatirim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unit16dp"
            android:text="@string/yatirim_hesabi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxVadesiz" />

        <CheckBox
            android:id="@+id/checkBoxPortfoy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unit16dp"
            android:text="@string/portfoy_hesabi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxYatirim" />


        <TextView
            android:id="@+id/textViewCheckBoxInvisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unit16dp"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/checkBoxVadesiz"
            app:layout_constraintTop_toBottomOf="@+id/phoneNumber" />

        <Button
            android:id="@+id/buttonOpenAccountFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unit16dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="@dimen/unit16dp"
            android:layout_marginBottom="@dimen/unit16dp"
            android:text="Hesap Seç"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxPortfoy" />

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unit16dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="@dimen/unit16dp"
            android:layout_marginBottom="@dimen/unit16dp"
            android:text="@string/kaydet"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonOpenAccountFragment" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>